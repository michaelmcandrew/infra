PITDIR={{ backup_pit }}
FREQUENCY={{ item.name }}
UNTIL={{ item.until }}
TIME=`date +%Y%m%d-%H%M`
SOURCEDIR={{ backup_snap }}
DESTDIR=$PITDIR$FREQUENCY/$TIME
mkdir -p $DESTDIR
rsync --archive --hard-links --link-dest=$SOURCEDIR $SOURCEDIR $DESTDIR
find $PITDIR$FREQUENCY -maxdepth 1 -type d -not -newermt -$UNTIL-5minutes -exec rm -r {}\;
